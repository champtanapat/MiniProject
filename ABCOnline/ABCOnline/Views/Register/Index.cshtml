@model ABCOnline.Models.Member
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.4.1.slim.min.js"></script>
    <style>
        .error {
        color:red
        }

    </style>

</head>



<body>
    <div class="container">
        <h2>Register</h2>
        <div class="row">

            @using (Html.BeginForm("Index", "Register", FormMethod.Post))
            {
                <div class="col-lg-12 col-md-12 col-sm-12">
                    @Html.LabelFor(m => m.firstName)
                    @Html.TextBoxFor(m => m.firstName, new { @class = "form-control", @maxlength = "20", id = "firstName" })
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    @Html.ValidationMessageFor(m => m.firstName, "", new { @class = "error" })
                </div>
                @Html.LabelFor(m => m.lastName)
                @Html.TextBoxFor(m => m.lastName, new { @class = "form-control", @maxlength = "20", id = "lastName" })
                @Html.ValidationMessageFor(m => m.firstName, String.Empty, new { @class = "error" })

                <br />
                <button type="submit">Submit</button>
            }



        </div>

    </div>



</body>
</html>
